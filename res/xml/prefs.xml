<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">
    <EditTextPreference
        android:key="PREF_LOGIN"
        android:title="Login"
        android:summary="User name"
        android:defaultValue=""
        />
    <EditTextPreference
        android:key="PREF_PASSWORD"
        android:title="Pasword"
        android:summary="User password"
        android:defaultValue=""
        />
    <CheckBoxPreference
        android:key="PREF_AUTO_UPDATE"
        android:title="Auto refresh"
        android:summary="Select to turn on automatic updating"
        android:defaultValue="true"
        />
    <ListPreference
        android:key="PREF_UPDATE_FREQ"
        android:title="Refresh frequency"
        android:summary="Frequency at which to refresh messages"
        android:entries="@array/update_freq_options"
        android:entryValues="@array/update_freq_values"
        android:dialogTitle="Refresh frequency"
        android:defaultValue="900"
        />
</PreferenceScreen>
