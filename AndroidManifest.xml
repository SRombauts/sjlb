<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
      package="fr.srombauts.sjlb"
      android:versionCode="50"
      android:versionName="0.5.0">
<!--  android:installLocation="auto" -->
      
    <application android:name=".ApplicationSJLB"
    			 android:label="@string/app_name"
    			 android:icon="@drawable/launcher_icon">
                 
        <activity android:name=".ActivityMain"
                  android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".ActivityForumSubjects">
        </activity>
        <activity android:name=".ActivityForumMessages"
            android:windowSoftInputMode="adjustPan">
            >
        </activity>
        <activity android:name=".ActivityPrivateMessages">
        </activity>
        <activity android:name=".ActivityNewPrivateMessage">
        </activity>
        <activity android:name=".ActivityPreferences">
        </activity>
	    <receiver android:name=".IntentReceiverStartService">
            <intent-filter>
                <action android:name="android.intent.action.BOOT_COMPLETED" />
            </intent-filter>
            <intent-filter>
                <action android:name="fr.srombauts.sjlb.ACTION_REFRESH_ALARM" />
            </intent-filter>
	    </receiver>
	    <service android:name=".ServiceRefresh">
        </service>
        <provider android:name=".ContentProviderUser"
                  android:authorities="fr.srombauts.sjlb.user"
        />
        <provider android:name=".ContentProviderPM"
                  android:authorities="fr.srombauts.sjlb.pm"
        />
        <provider android:name=".ContentProviderSubj"
                  android:authorities="fr.srombauts.sjlb.subj"
        />
        <provider android:name=".ContentProviderMsg"
                  android:authorities="fr.srombauts.sjlb.msg"
        />
        <provider android:name=".ContentProviderFile"
                  android:authorities="fr.srombauts.sjlb.file"
        />
    </application>

    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED"/>
    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.VIBRATE" /> 
    <uses-permission android:name="android.permission.READ_CONTACTS" />

    <uses-sdk android:minSdkVersion="7"
              android:targetSdkVersion="7" />

</manifest> 