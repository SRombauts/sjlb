<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
      package="fr.srombauts.sjlb"
      android:versionCode="22"
      android:versionName="0.2.2">
      
    <application android:icon="@drawable/launcher_icon" android:label="@string/app_name" android:debuggable="false">
        <activity android:name=".ActivitySJLB"
                  android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".ActivityPrivateMessages">
        </activity>
        <activity android:name=".ActivityPreferences">
        </activity>
	    <receiver android:name=".IntentReceiverStartService">
            <intent-filter>
                <action android:name="android.intent.action.BOOT_COMPLETED" />
            </intent-filter>
            <intent-filter>
                <action android:name="fr.srombauts.sjlb.ACTION_REFRESH_ALARM" />
            </intent-filter>
	    </receiver>
	    <service android:name=".ServiceRefresh">
        </service>
        <provider android:name="fr.srombauts.sjlb.ContentProviderPM"
                  android:authorities="fr.srombauts.sjlb" 
        />
        <provider android:name="fr.srombauts.sjlb.ContentProviderMsg"
                  android:authorities="fr.srombauts.sjlb" 
        />
    </application>

    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED"/>
    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.VIBRATE" /> 

    <uses-sdk android:minSdkVersion="7"
              android:targetSdkVersion="8" />

</manifest> 