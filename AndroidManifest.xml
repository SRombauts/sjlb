<?xml version="1.0" encoding="utf-8"?>
<!-- ATTENTION, le versionCode ne doit être incrémenté que pour l'ultime compilation en release pour publication,
     PAS pour les tests, car cette valeur est utilisée pour signaler automatiquement une mise à jour disponible -->
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
      package="fr.srombauts.sjlb"
      android:versionCode="54"
      android:versionName="0.5.4">
<!--  android:installLocation="auto" : seulement à partir de l'API level 8 -->
      
    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED"/>
    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.VIBRATE" /> 
    <uses-permission android:name="android.permission.READ_CONTACTS" />

    <uses-sdk android:minSdkVersion="7"
              android:targetSdkVersion="10" />
    
    <application android:name=".ApplicationSJLB"
                 android:label="@string/app_name"
                 android:icon="@drawable/launcher_icon" >
            <!-- android:debuggable="false" : géré automatiquement par Eclipse --> 
                 
        <activity android:name=".gui.ActivityMain"
                  android:label="@string/app_name"
                  android:launchMode="singleTask">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".gui.ActivityForumSubjects">
        </activity>
        <activity android:name=".gui.ActivityForumMessages"
            android:windowSoftInputMode="adjustPan">
            >
        </activity>
        <activity android:name=".gui.ActivityPrivateMessages"
                  android:launchMode="singleTask">
        </activity>
        <activity android:name=".gui.ActivityNewPrivateMessageivateMessage">
        </activity>
        <activity android:name=".gui.ActivityPreferencesnces">
        </activity>
	    <receiver android:name=".IntentReceiverStartService">
            <intent-filter>
                <action android:name="android.intent.action.BOOT_COMPLETED" />
            </intent-filter>
            <intent-filter>
                <action android:name="fr.srombauts.sjlb.ACTION_REFRESH_ALARM" />
            </intent-filter>
	    </receiver>
	    <service android:name=".service.ServiceRefresh">
        </service>
        <provider android:name=".db.ContentProviderUser"
                  android:authorities="fr.srombauts.sjlb.user"
        />
        <provider android:name=".db.ContentProviderPM"
                  android:authorities="fr.srombauts.sjlb.pm"
        />
        <provider android:name=".db.ContentProviderSubjubj"
                  android:authorities="fr.srombauts.sjlb.subj"
        />
        <provider android:name=".db.ContentProviderMsgMsg"
                  android:authorities="fr.srombauts.sjlb.msg"
        />
        <provider android:name=".db.ContentProviderFileile"
                  android:authorities="fr.srombauts.sjlb.file"
        />
    </application>

</manifest> 